/// <reference types="vite/client" />
{
    "compilerOptions": {
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "vite/client"
        ],
        "rootDirs": [
            "resources/js"
        ],
        "typeRoots": [
            "resources/js/types",
            "resources/js/models"
        ],
        "allowJs": true,
        "module": "ESNext",
        "sourceMap": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "jsx": "preserve",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "./resources/js/*"
            ]
        }
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.vue"
    ]
}
